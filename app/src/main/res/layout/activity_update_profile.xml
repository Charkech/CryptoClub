<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".UpdateProfile">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Profile"
        android:textSize="30sp"
        android:gravity="center"
        android:fontFamily="@font/coda"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginBottom="40dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_name_up"
        android:hint="Name"
        android:fontFamily="@font/coda"
        android:drawableStart="@drawable/ic_baseline_label_24"
        android:paddingStart="5dp"
        android:drawablePadding="5dp"
        android:layout_margin="4dp"
        android:textColor="@color/darkGray"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_prof_up"
        android:hint="Profession"
        android:fontFamily="@font/coda"
        android:drawableStart="@drawable/ic_baseline_work_outline_24"
        android:paddingStart="5dp"
        android:drawablePadding="5dp"
        android:layout_margin="4dp"
        android:textColor="@color/darkGray"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_bio_up"
        android:hint="Bio"
        android:fontFamily="@font/coda"
        android:drawableStart="@drawable/ic_baseline_emoji_people_24"
        android:paddingStart="5dp"
        android:drawablePadding="5dp"
        android:layout_margin="4dp"
        android:textColor="@color/darkGray"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_email_up"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:paddingStart="5dp"
        android:drawablePadding="5dp"
        android:fontFamily="@font/coda"
        android:hint="Email"
        android:layout_margin="4dp"
        android:textColor="@color/darkGray"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_website_up"
        android:fontFamily="@font/coda"
        android:hint="Website"
        android:drawableStart="@drawable/ic_baseline_public_24"
        android:paddingStart="5dp"
        android:drawablePadding="5dp"
        android:layout_margin="4dp"
        android:textColor="@color/darkGray"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/update_btn"
        android:text="Update Profile"
        android:fontFamily="@font/coda"
        android:layout_margin="10dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        />
</LinearLayout>