<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    android:id="@+id/cv_logout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="25sp"
        android:fontFamily="@font/coda"
        android:textColor="@color/black"
        android:drawableStart="@drawable/ic_baseline_power_settings_new_24"
        android:paddingStart="10dp"
        android:drawablePadding="10dp"
        android:padding="5dp">

    </TextView>
</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:cardCornerRadius="4dp"
        android:layout_margin="5dp"
        android:id="@+id/cv_privacy">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:fontFamily="@font/coda"
            android:drawableStart="@drawable/bottom_lock"
            android:paddingStart="10dp"
            android:drawablePadding="10dp"
            android:padding="5dp">

        </TextView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:cardCornerRadius="4dp"
        android:layout_margin="5dp"
        android:id="@+id/cv_delete">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Profile"
            android:fontFamily="@font/coda"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_baseline_delete_24"
            android:paddingStart="10dp"
            android:drawablePadding="10dp"
            android:padding="5dp">

        </TextView>
    </androidx.cardview.widget.CardView>
</LinearLayout>