<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="profile"-->
<!--        android:textSize="50sp"-->
<!--        android:clickable="true"-->
<!--        android:id="@+id/tv_profile"/>-->

    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/white">

        <ImageButton
            android:id="@+id/imageBtn_menu_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_menu_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:id="@+id/profile_top"
            android:fontFamily="@font/coda"
            android:text="MY PROFILE"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageBtn_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="10dp"
            android:clickable="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_edit_24" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="75dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/cardview_profile"
            android:elevation="8dp"
            app:cardElevation="10dp"
            >

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageview_profile"
                android:clickable="true"
                android:scaleType="fitCenter"
                />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_name_profile"
                android:fontFamily="@font/coda"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:hint="Name"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"

                android:textColor="@color/black"
                android:textSize="25sp"/>


            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_prof_profile"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/coda"
                android:hint="Profession"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"

                android:textColor="@color/gray"
                android:textSize="15sp"/>
            
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Primary Details"
        android:background="@color/gray"
        android:padding="5dp"
        android:paddingStart="40dp"
        android:paddingLeft="40dp"
        android:fontFamily="@font/coda"
        android:gravity="center"

        android:textColor="@color/black"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Bio"
        android:padding="5dp"
        android:gravity="center"
        android:fontFamily="@font/coda"
        android:layout_marginLeft="20dp"
        android:textColor="@color/gray"
        android:textSize="15sp"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Bio"
        android:gravity="center"
        android:padding="5dp"
        android:id="@+id/tv_bio_profile"
        android:fontFamily="@font/coda"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"/>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:background="@color/gray"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Email"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/coda"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textSize="15sp"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Email"
        android:padding="5dp"
        android:id="@+id/tv_email_profile"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/coda"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"/>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:background="@color/gray"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Website"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/coda"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textSize="15sp"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Website"
        android:padding="5dp"
        android:clickable="true"
        android:id="@+id/tv__website_profile"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:gravity="center"
        android:fontFamily="@font/coda"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"/>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Followers"
        android:padding="10dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_baseline_people_24"
        android:clickable="true"
        android:id="@+id/tv_followers_profile"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posts"
        android:padding="10dp"

        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_baseline_add_photo_alternate_24"
        android:clickable="true"
        android:id="@+id/tv_post_profile"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"/>
    </LinearLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Chat"
        android:visibility="gone"
        android:background="@drawable/custom_buttom"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:id="@+id/sendMessage_btn"
        />




</LinearLayout>
